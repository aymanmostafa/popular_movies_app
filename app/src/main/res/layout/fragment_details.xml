<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.ayman.pop.DetailsActivityFragment"
    tools:showIn="@layout/activity_details"
    android:id="@+id/allViewsLayout_id">


    <TextView android:layout_height="100dp" android:layout_width="match_parent" android:id="@+id/title_id" android:textIsSelectable="false" android:textStyle="bold|italic" android:textSize="23sp"
        android:autoText="false"
        android:typeface="normal"
        android:textAlignment="gravity"
        android:singleLine="false"
        android:textColor="#ffffff"
        android:background="?attr/colorPrimary"
        android:layout_marginBottom="-10dp"
        android:padding="20dp" />


    <ScrollView android:layout_height="match_parent" android:layout_width="match_parent" android:layout_gravity="center_vertical" android:id="@+id/scrollView"
        android:layout_below="@+id/title_id"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">


        <LinearLayout android:layout_height="260dp" android:layout_width="match_parent" android:orientation="horizontal" android:weightSum="1">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:id="@+id/poster_id"
        android:scaleType="centerCrop" />

            <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="260dp"
                android:weightSum="1"
                android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/year_id"
                android:layout_weight="0.11"
                android:textStyle="bold"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rate_id"
                android:layout_weight="0.12"
                android:textSize="20sp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Add to favorite"
                android:id="@+id/favor_id"
                android:background="?attr/colorPrimary"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Reviews"
                android:id="@+id/review_id"
                android:background="?attr/colorPrimary"
                android:textColor="#ffffff"
                android:layout_marginTop="20dp" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/trail_id"
                    android:text="Trailers"
                    android:background="?attr/colorPrimary"
                    android:textColor="#ffffff"
                    android:layout_marginTop="20dp" />

            </LinearLayout>

    </LinearLayout>

        <TextView android:layout_height="match_parent" android:layout_width="match_parent" android:id="@+id/overview_id" android:textIsSelectable="false"
            android:textSize="15sp"
            android:layout_alignBottom="@+id/scrollView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </LinearLayout>

</ScrollView>

</RelativeLayout>
